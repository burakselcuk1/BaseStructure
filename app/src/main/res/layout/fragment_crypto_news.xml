<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundpickup"
        android:padding="10dp"
        tools:context=".presentation.cryptoNews.CryptoNewsFragment">

        <LinearLayout
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back"/>

            <TextView
                android:id="@+id/tvNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news"
                android:textSize="28sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLayoutNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/rv_news_shimmer_placeholder" />

                <include layout="@layout/rv_news_shimmer_placeholder" />

                <include layout="@layout/rv_news_shimmer_placeholder" />

                <include layout="@layout/rv_news_shimmer_placeholder" />

                <include layout="@layout/rv_news_shimmer_placeholder" />

                <include layout="@layout/rv_news_shimmer_placeholder" />

                <include layout="@layout/rv_news_shimmer_placeholder" />

                <include layout="@layout/rv_news_shimmer_placeholder" />

                <include layout="@layout/rv_news_shimmer_placeholder" />

                <include layout="@layout/rv_news_shimmer_placeholder" />

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:layout_below="@id/navbar"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="#2196F3"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
</layout>