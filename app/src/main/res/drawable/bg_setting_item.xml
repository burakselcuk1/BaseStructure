<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sağa ve aşağıya doğru gölge efekti -->
    <item android:right="2dp" android:bottom="2dp">
        <shape android:shape="ring">
            <solid android:color="#50000000"/> <!-- Gölge rengi (yarı saydam siyah) -->
            <corners android:radius="16dp"/> <!-- Köşe yuvarlaklığı -->
        </shape>
    </item>

    <!-- Arka plan -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#192124"/> <!-- Arka plan rengi (koyu renk) -->
            <corners android:radius="16dp"/> <!-- Köşe yuvarlaklığı -->
        </shape>
    </item>
</layer-list>
